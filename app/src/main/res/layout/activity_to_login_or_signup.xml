<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.me.firstapp.view.FullScreenVideoView
        android:id="@+id/activity_to_login_or_signup_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/tologin_logo"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <android.support.v4.view.ViewPager
            android:id="@+id/activity_to_login_or_signup_viewpager"
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </android.support.v4.view.ViewPager>

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/activity_to_login_or_signup_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/activity_to_login_or_signup_btn_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#6595b5"
                android:text="登陆"
                android:textSize="16sp"
                android:textColor="#ffffff"/>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/activity_to_login_or_signup_btn_signup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#6595b5"
                android:text="注册"
                android:textSize="16sp"
                android:textColor="#ffffff"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>