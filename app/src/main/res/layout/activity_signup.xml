<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff">

        <ImageButton
            android:id="@+id/activity_regest_returnback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_returnback_bg"
            android:src="@drawable/return_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="#435356"
            android:textSize="18sp" />

        <Button
            android:id="@+id/activity_signup_btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_returnback_bg"
            android:clickable="false"
            android:gravity="center"
            android:text="下一步"
            android:textColor="#435356"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_alignParentBottom="true"
            android:background="#d9d9d9" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="20dp"
        android:background="#d9d9d9" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/activity_signup_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:hint="输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:padding="15dp"
            android:singleLine="true"
            android:textColor="#435356"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/activity_signup_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@null"
            android:padding="10dp"
            android:src="@drawable/search_clear_normal"
            android:visibility="gone" />

    </FrameLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#d9d9d9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="#d9d9d9" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="#d9d9d9" />

            <EditText
                android:id="@+id/activity_signup_verify_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:hint="输入验证码"
                android:inputType="number"
                android:padding="15dp"
                android:singleLine="true"
                android:textColor="#435356"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="#d9d9d9" />

        </LinearLayout>

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="#d9d9d9" />

        <Button
            android:id="@+id/activity_signup_btn_getcode"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/btn_default_bg"
            android:enabled="true"
            android:padding="5dp"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="15sp" />

    </LinearLayout>


</LinearLayout>