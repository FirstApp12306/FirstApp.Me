<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff" >

        <ImageButton
            android:id="@+id/activity_alter_psd_btn_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_returnback_bg"
            android:src="@drawable/return_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改密码"
            android:textColor="#435356"
            android:textSize="20sp" />

        <Button
            android:id="@+id/activity_alter_psd_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="#435356"
            android:background="@drawable/btn_returnback_bg"
            android:text="完成"
            android:clickable="false"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="#d9d9d9"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#d9d9d9"
        android:layout_marginTop="40dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/activity_alter_psd_old_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:hint="请输入旧密码"
            android:maxLength="40"
            android:textColor="#435356"
            android:textSize="16sp"
            android:padding="15dp"/>

        <ImageButton
            android:id="@+id/activity_alter_psd_btn_old_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@null"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/search_clear_normal"
            android:visibility="gone"/>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#d9d9d9" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/activity_alter_psd_new_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:hint="请输入新密码"
            android:maxLength="40"
            android:textColor="#435356"
            android:textSize="16sp"
            android:padding="15dp"/>

        <ImageButton
            android:id="@+id/activity_alter_psd_btn_new_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@null"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/search_clear_normal"
            android:visibility="gone"/>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#d9d9d9" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/activity_alter_psd_sure_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:hint="请确认新密码"
            android:maxLength="40"
            android:textColor="#435356"
            android:textSize="16sp"
            android:padding="15dp"/>

        <ImageButton
            android:id="@+id/activity_alter_psd_sure_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@null"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/search_clear_normal"
            android:visibility="gone"/>

    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#d9d9d9" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingEnd="10dp"
        android:text="不少于6个字符"
        android:textColor="#bfbfbf"
        android:textSize="14sp"/>
</LinearLayout>