<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pager_friend_news_list_item_topic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="轻性感"
        android:textSize="18sp"
        android:textColor="#435356"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.me.firstapp.view.CircleImageView
            android:id="@+id/pager_friend_news_list_item_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/test"/>


        <ImageButton
            android:id="@+id/pager_friend_news_list_item_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:gravity="end"
            android:background="@null"
            android:src="@drawable/topic_comments_unfold"/>

    </RelativeLayout>




    <TextView
        android:id="@+id/pager_friend_news_list_item_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="黑暗系少年"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/pager_friend_news_list_item_note_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/test"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/pager_friend_news_list_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="得不到的放不下啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
        android:textSize="18sp"
        android:textColor="#435356"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/pager_friend_news_list_item_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:layout_weight="3"
            android:text="1小时前"
            android:textSize="14sp"
            android:textColor="#b3b3b3"/>

        <Button
            android:id="@+id/pager_friend_news_list_item_btn_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3"
            android:textColor="#b3b3b3"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:drawableRight="@drawable/icon_post_comment"
            android:paddingRight="10dp"
            android:background="@null"
            />
        <Button
            android:id="@+id/pager_friend_news_list_item_btn_support"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="34"
            android:textColor="#b3b3b3"
            android:textSize="14sp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:drawableRight="@drawable/icon_post_unlike"
            android:background="@null"
            />

    </LinearLayout>

</LinearLayout>