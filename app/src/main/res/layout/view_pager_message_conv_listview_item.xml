<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <FrameLayout
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <com.me.firstapp.view.CircleImageView
                android:id="@+id/view_pager_message_conv_listview_item_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/person_avatar_default_round" />

            <TextView
                android:id="@+id/view_pager_message_conv_listview_item_msg_num"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top|right"
                android:layout_marginTop="3dp"
                android:background="@drawable/red_circle"
                android:gravity="center"
                android:text="15"
                android:textColor="#ffffff" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/view_pager_message_conv_listview_item_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="李贵强"
                    android:textColor="#435356"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/view_pager_message_conv_listview_item_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:singleLine="true"
                    android:text="这是最近的聊天内容哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
                    android:textSize="16sp"
                    android:textColor="#808080" />
            </LinearLayout>

            <TextView
                android:id="@+id/view_pager_message_conv_listview_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="下午 17:22"
                android:textColor="#808080" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>