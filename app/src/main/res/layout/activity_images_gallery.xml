<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E0DE">
    <RelativeLayout
        android:id="@+id/activity_images_gallery_headview"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/activity_images_gallery_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_returnback_bg"
            android:text="返回"
            android:textColor="#435356"
            android:textSize="16sp" />

        <Button
            android:id="@+id/activity_images_gallery_btn_del"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_returnback_bg"
            android:text="删除"
            android:textColor="#435356"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_images_gallery_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff" >

        <Button
            android:id="@+id/activity_images_gallery_btn_ok"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="完成"
            android:textColor="#435356"
            android:textSize="16sp"
            android:background="@drawable/btn_returnback_bg"/>
    </RelativeLayout>

    <com.me.firstapp.zoom.ViewPagerFixed
        android:id="@+id/activity_images_gallery_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/activity_images_gallery_bottom_layout"
        android:layout_below="@id/activity_images_gallery_headview"
        android:layout_centerHorizontal="true"
        android:background="#000000"
        android:unselectedAlpha="1" >

    </com.me.firstapp.zoom.ViewPagerFixed>
</RelativeLayout>