<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3f80dc" >

        <ImageButton
            android:id="@+id/activity_regest_returnback"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_returnback_bg"
            android:src="@drawable/return_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <EditText
            android:id="@+id/activity_regest_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_regest_bg_selector"
            android:drawableLeft="@drawable/regest_login_account_selector"
            android:inputType="phone"
            android:hint="输入手机号"
            android:singleLine="true"
            android:padding="5dp"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <EditText
                android:id="@+id/activity_regest_verify_code"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:layout_weight="1"
                android:background="@drawable/input_regest_bg_selector"
                android:hint="输入验证码"
                android:padding="5dp"
                android:singleLine="true" />
            <Button
                android:id="@+id/activity_regest_btn_getcode"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:background="@drawable/btn_default_bg"
                android:enabled="true"
                android:text="获取验证码"
                android:textSize="15sp"
                android:textColor="#ffffff" />

        </LinearLayout>

        <Button
            android:id="@+id/activity_regest_btn_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_default_bg"
            android:enabled="true"
            android:text="提交"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="不用担心，我们不会公开您的手机号码。注册即表明您同意我们的《服务协议》"/>

    </LinearLayout>




</LinearLayout>