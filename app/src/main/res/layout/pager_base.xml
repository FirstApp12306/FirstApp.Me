<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/pager_base_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff" >

        <Button
            android:id="@+id/pager_base_btn_create_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="#435356"
            android:textSize="16sp"
            android:padding="10dp"
            android:background="@drawable/btn_returnback_bg"
            android:text="创建话题"/>

        <TextView
            android:id="@+id/pager_base_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:text="测试"
            android:textColor="#435356"
            android:textSize="18sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <RadioGroup
                android:id="@+id/pager_base_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/pager_base_rbtn_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:gravity="center"
                    android:text="私信"
                    android:textSize="16sp"
                    android:textColor="@drawable/rbtn_tab_text_selector"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:background="@drawable/rbtn_pager_base_find_selector"/>
                <RadioButton
                    android:id="@+id/pager_base_rbtn_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="提醒"
                    android:textSize="16sp"
                    android:textColor="@drawable/rbtn_tab_text_selector"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:button="@null"
                    android:background="@drawable/rbtn_pager_base_new_selector"/>
            </RadioGroup>
            <TextView
                android:id="@+id/pager_base_red_circle"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/red_circle"
                android:visibility="gone"/>
        </FrameLayout>


        <Button
            android:id="@+id/pager_base_btn_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_returnback_bg"
            android:textColor="#435356"
            android:textSize="16sp"
            android:text="设置" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_alignParentBottom="true"
        android:background="#d9d9d9"/>

    <FrameLayout
        android:id="@+id/pager_base_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>
</LinearLayout>