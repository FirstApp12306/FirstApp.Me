<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pager_blog_list_item_blog_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_grey_edit_bg"
        android:text="昨天 06:31"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/shape_grey_blog_item_bg"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/pager_blog_list_item_blog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="你真的会写单利模式"
            android:textColor="#435356"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pager_blog_list_item_blog_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="4月5日"
            android:textColor="#999999"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/pager_blog_list_item_blog_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/test" />

        <TextView
            android:id="@+id/pager_blog_list_item_blog_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="最全的单利模式实现详细了解了，不了解的情仔细看，了解的情飘过"
            android:textColor="#999999"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pager_blog_list_item_blog_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:text="查看全文"
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>