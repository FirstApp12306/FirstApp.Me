<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <com.me.firstapp.view.CircleImageView
        android:id="@+id/notice_comment_list_item_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/person_avatar_default_round"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/notice_comment_list_item_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="大点"
                    android:textColor="#435356"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/notice_comment_list_item_comment"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="谢谢"
                    android:textColor="#435356"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/notice_comment_list_item_time"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="2016-03-28 23:13"
                    android:textColor="#435356"
                    android:textSize="16sp"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/notice_comment_list_item_note_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/test"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="#d9d9d9" />

    </LinearLayout>

</LinearLayout>