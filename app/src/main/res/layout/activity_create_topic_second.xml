<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff" >

        <ImageButton
            android:id="@+id/activity_regest_returnback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_returnback_bg"
            android:src="@drawable/return_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="创建话题"
            android:textColor="#435356"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9d9d9"/>

    <EditText
        android:id="@+id/activity_create_topic_second_topic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_create_topic_bg"
        android:hint="输入话题名(不超过30个字)"
        android:textColorHint="#808080"
        android:maxLength="30"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_margin="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9d9d9"/>


    <EditText
        android:id="@+id/activity_create_topic_second_topic_detail"
        android:layout_width="match_parent"
        android:gravity="left"
        android:layout_height="150dp"
        android:background="#ffffff"
        android:hint="输入话描述(不超过100个字)"
        android:textColorHint="#555555"
        android:maxLength="100"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/activity_create_topic_second_topic_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#435356"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8b8b8b"
            android:text="/100"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9d9d9"/>

    <Button
        android:id="@+id/activity_create_topic_second_topic_btn_pub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_default_bg"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="立即发布"/>

</LinearLayout>