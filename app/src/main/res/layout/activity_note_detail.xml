<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_note_detail_rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <com.me.firstapp.view.HoveringScrollview
        android:id="@+id/activity_note_detail_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_note_detail_topic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="单发摄影"
                android:textColor="#435356"
                android:textSize="18sp" />

            <com.me.firstapp.view.CircleImageView
                android:id="@+id/activity_note_detail_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/test" />

            <TextView
                android:id="@+id/activity_note_detail_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="黑暗系少年"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/activity_note_detail_note_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/test" />

            <TextView
                android:id="@+id/activity_note_detail_note_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="得不到的放不下啊啊啊啊啊啊"
                android:textColor="#435356"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/activity_note_detail_search02"
                android:layout_width="match_parent"
                android:layout_height="40.8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/activity_note_detail_hoveringLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_alignParentBottom="true"
                        android:background="#d9d9d9" />

                    <com.viewpagerindicator.TabPageIndicator
                        android:id="@+id/activity_note_detail_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#ffffff">


                    </com.viewpagerindicator.TabPageIndicator>
                </LinearLayout>
            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/activity_note_detail_viewpager"
                android:layout_width="match_parent"
                android:layout_height="1000dp" />

        </LinearLayout>

    </com.me.firstapp.view.HoveringScrollview>

    <RelativeLayout
        android:id="@+id/this_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff">

        <ImageButton
            android:id="@+id/activity_note_detail_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_returnback_bg"
            android:padding="10dp"
            android:src="@drawable/return_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="帖子详情"
            android:textColor="#435356"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_alignParentBottom="true"
            android:background="#d9d9d9" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/activity_note_detail_search01"
        android:layout_width="match_parent"
        android:layout_height="40.8dp"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:background="#ff0000"
        android:visibility="invisible">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#f6f6f6"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/activity_note_detail_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center|left"
            android:hint="点此输入文字"
            android:padding="10dp"
            android:textColorHint="#808080"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/activity_note_detail_btn_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="10dp"
            android:src="@drawable/icon_post_unlike" />

        <Button
            android:id="@+id/activity_note_detail_btn_pub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:padding="10dp"
            android:text="发布"
            android:textColor="#435356"
            android:textSize="18sp"
            android:visibility="gone" />

    </LinearLayout>

</FrameLayout>